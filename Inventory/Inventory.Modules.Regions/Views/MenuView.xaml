<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:res="clr-namespace:Inventory.Core.Resources;assembly=Inventory.Core"
             x:Class="Inventory.Modules.Regions.Views.MenuView"
             mc:Ignorable="d">
    <UserControl.Resources>
        <Image x:Key="NotificationsIcon" Source="{Binding Source={x:Static res:IconsPath.Notifications}}" Margin="8"/>
        <Image x:Key="CloseIcon" Source="{Binding Source={x:Static res:IconsPath.Close}}" Margin="12" />
        <Image x:Key="RestoreIcon" Source="{Binding Source={x:Static res:IconsPath.Restore}}" Margin="12"/>
        <Image x:Key="MinimizeIcon" Source="{Binding Source={x:Static res:IconsPath.Minimize}}" Margin="12"/>
    </UserControl.Resources>

    <Grid>
        <Border Margin="0" BorderBrush="LightGray" Background="Transparent" BorderThickness="0.5">
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        Cursor="Hand">
                <Viewbox Width="30" Height="30" Margin="0,0,10,0">
                    <Grid Width="32" Height="32">
                        <Ellipse Fill="Orange"/>
                        <TextBlock HorizontalAlignment="Center" Text="БС" TextAlignment="Center" VerticalAlignment="Center" FontSize="16" FontWeight="Bold" Foreground="#28282e"/>
                    </Grid>
                </Viewbox>

                <Button Margin="0,0,10,0"
                        Width="45" Height="45" 
                        BorderBrush="Transparent" 
                        BorderThickness="0" 
                        Background="Transparent"
                        Cursor="Hand"
                        Content="{StaticResource NotificationsIcon}" />

                <Button Margin="0,0,10,0"
                        Width="45" Height="45"
                        BorderThickness="0"
                        FontSize="12" Foreground="White"
                        Background="Transparent"
                        Cursor="Hand"
                        Content="{StaticResource MinimizeIcon}" />

                <Button Margin="0,0,10,0"
                        Width="45" Height="45"
                        BorderThickness="0"
                        FontSize="12" Foreground="White"
                        Background="Transparent"
                        Cursor="Hand"
                        Content="{StaticResource RestoreIcon}" />

                <Button Margin="0,0,0,0"
                        Width="45" Height="45"
                        BorderThickness="0"
                        FontSize="18" Foreground="White"
                        Background="Transparent"
                        Cursor="Hand"
                        Content="{StaticResource CloseIcon}"/>
            </StackPanel>
        </Border>
    </Grid>

</UserControl>

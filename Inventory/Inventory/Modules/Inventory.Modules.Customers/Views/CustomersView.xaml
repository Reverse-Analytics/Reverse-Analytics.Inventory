<UserControl x:Class="Inventory.Modules.Customers.Views.CustomersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:res="clr-namespace:Inventory.Core.Resources;assembly=Inventory.Core"
             xmlns:sf="http://schemas.syncfusion.com/wpf"
             prism:ViewModelLocator.AutoWireViewModel="True"
             Style="{StaticResource Page_Style}"
             mc:Ignorable="d">
    <UserControl.Resources>

        <Style TargetType="sf:GridCell">
            <Setter Property="BorderThickness" Value="0,0,0,1" />
        </Style>
        <Style TargetType="sf:GridHeaderCellControl">
            <Setter Property="BorderThickness" Value="0,0,0,1" />
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" HorizontalAlignment="Left">
            <TextBlock Margin="40,25,0,25"
                       HorizontalAlignment="Left"
                       DockPanel.Dock="Left"
                       Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                       Text="Customers" />
        </StackPanel>
        <StackPanel Grid.Row="0"
                    Margin="0,25,0,25"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Orientation="Horizontal">
            <Border Margin="0,0,25,0"
                    VerticalAlignment="Center"
                    Background="White"
                    BorderBrush="LightGray"
                    BorderThickness="2"
                    CornerRadius="5">
                <StackPanel Orientation="Horizontal">
                    <TextBox x:Name="searchTextBox"
                             Width="250"
                             Height="25"
                             Margin="20,2,2,2"
                             md:HintAssist.Hint="Search customers"
                             md:TextFieldAssist.HasClearButton="True"
                             BorderBrush="Transparent"
                             FontSize="14"
                             Text="{Binding SearchText}" />
                    <Border Width="30"
                            Background="Transparent"
                            BorderBrush="LightGray"
                            BorderThickness="1,0,0,0"
                            Cursor="Hand">
                        <Viewbox>
                            <Path Width="15"
                                  Height="15"
                                  Margin="8"
                                  Data="{Binding Source={x:Static res:IconsPath.Search}}"
                                  Fill="Black" />
                        </Viewbox>
                    </Border>
                </StackPanel>
            </Border>
            <ComboBox x:Name="OutlinedComboBox"
                      Width="150"
                      Height="30"
                      Margin="0,0,25,0"
                      Padding="10,7,10,7"
                      md:HintAssist.Hint="Select company"
                      md:TextFieldAssist.HasClearButton="True"
                      Cursor="Hand"
                      IsEnabled="{Binding Path=IsChecked, ElementName=OutlinedComboBoxEnabledCheckBox}"
                      ItemsSource="{Binding Companies}"
                      SelectedValue="{Binding SelectedCompany}"
                      Style="{StaticResource MaterialDesignOutlinedComboBox}" />

            <Button Width="135"
                    Height="30"
                    Margin="0,0,25,0"
                    HorizontalAlignment="Right"
                    md:ButtonAssist.CornerRadius="5"
                    Background="#1890ff"
                    BorderThickness="0"
                    Command="{Binding AddCommand}"
                    Foreground="White"
                    Style="{StaticResource MaterialDesignRaisedAccentButton}">
                <TextBlock Text="Add customer" />
            </Button>

            <md:PopupBox Padding="2,0,2,0"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"
                         sf:FocusManagerHelper.FocusedElement="True"
                         GotFocus="PopupBox_GotFocus"
                         LostFocus="PopupBox_LostFocus">
                <StackPanel>
                    <Button Content="More" />
                    <Button Content="Options" />
                </StackPanel>
            </md:PopupBox>
        </StackPanel>

        <StackPanel Grid.Row="1"
                    Margin="25,50"
                    VerticalAlignment="Top">
            <sf:SfDataGrid x:Name="customersDataGrid"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Top"
                           AllowSorting="True"
                           AutoGenerateColumns="False"
                           Background="White"
                           BorderBrush="LightGray"
                           BorderThickness="1"
                           CanUseViewFilter="True"
                           CurrentCellBorderThickness="0"
                           FontSize="14"
                           GridLinesVisibility="Horizontal"
                           HeaderLinesVisibility="Horizontal"
                           HeaderRowHeight="40"
                           ItemsSource="{Binding ElementName=dataPager, Path=PagedSource}"
                           RowHeight="35"
                           RowSelectionBrush="#ebebeb"
                           SelectionChanged="customersDataGrid_SelectionChanged"
                           SelectionMode="Single"
                           SelectionUnit="Row">
                <sf:SfDataGrid.HeaderStyle>
                    <Style TargetType="sf:GridHeaderCellControl">
                        <Setter Property="Background" Value="#f7f7f7" />
                        <Setter Property="Foreground" Value="Black" />
                    </Style>
                </sf:SfDataGrid.HeaderStyle>
                <sf:SfDataGrid.Columns>
                    <sf:GridTextColumn Width="150"
                                       HeaderText="Customer Id"
                                       MappingName="Id"
                                       TextAlignment="Center" />
                    <sf:GridTextColumn Width="250"
                                       VerticalAlignment="Center"
                                       HeaderText="Name"
                                       MappingName="FullName"
                                       TextAlignment="Center" />
                    <sf:GridTextColumn Width="250"
                                       HeaderText="Phone number"
                                       MappingName="ContactPersonPhone"
                                       TextAlignment="Center" />
                    <sf:GridNumericColumn Width="200"
                                          HeaderText="Balance"
                                          MappingName="Balance"
                                          NumberDecimalDigits="2"
                                          TextAlignment="Center" />
                    <sf:GridTextColumn Width="300"
                                       HeaderText="Company"
                                       MappingName="CompanyName"
                                       TextAlignment="Center" />
                    <sf:GridTemplateColumn Width="85"
                                           AllowFocus="True"
                                           AllowSorting="False"
                                           HeaderText="Actions">
                        <sf:GridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <md:PopupBox Padding="2,0,2,0"
                                             HorizontalAlignment="Center"
                                             VerticalAlignment="Center"
                                             GotFocus="PopupBox_GotFocus"
                                             LostFocus="PopupBox_LostFocus">
                                    <StackPanel>
                                        <Button Content="More" />
                                        <Button Content="Options" />
                                    </StackPanel>
                                </md:PopupBox>
                            </DataTemplate>
                        </sf:GridTemplateColumn.CellTemplate>
                    </sf:GridTemplateColumn>
                </sf:SfDataGrid.Columns>
            </sf:SfDataGrid>

            <sf:SfDataPager x:Name="dataPager"
                            Margin="0,15,0,0"
                            HorizontalAlignment="Center"
                            PageSize="15"
                            Source="{Binding FilteredCustomers}" />
        </StackPanel>
    </Grid>
</UserControl>
